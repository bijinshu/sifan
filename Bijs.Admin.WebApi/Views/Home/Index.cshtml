                //    return (/^.{1,20}$/g).test(this.frm.Name);
                //},
                //isPriceValid: function () {
                //    return (/^\d+(.\d{1,4})?$/g).test(this.frm.Price) && this.frm.Price > 0;
                //},
                //isRemarkValid: function () {
                //    return (/^.{0,200}$/g).test(this.frm.Remark);
                //}
            },
            created: function () {
                //this.getData();
            }
        })
    })
</script>
